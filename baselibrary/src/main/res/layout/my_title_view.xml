<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/title_gradient_bg" >

    <Button
        android:id="@+id/btn_left"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_arrow_back_white_36dp"
         />

    <TextView
        android:id="@+id/tv_title"
        style="@style/title_tv_style"
        android:layout_centerInParent="true"
        android:text="@string/title" />

    <Button
        android:id="@+id/btn_right"
        style="@style/btn_small_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_for_title_selector"
        android:text="@string/setting" />

</RelativeLayout>