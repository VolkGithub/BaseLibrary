<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splach_gray_black_gradient_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_username"
            style="@style/et_large_style"
            android:layout_width="@dimen/et_login_width"
            android:hint="@string/please_input_user_name" />

        <EditText
            android:id="@+id/et_password"
            style="@style/et_large_style"
            android:layout_width="@dimen/et_login_width"
            android:layout_marginTop="20dp"
            android:hint="@string/please_input_password"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_save_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:checked="false" />

            <TextView
                style="@style/tv_base_style"
                android:text="记住\n密码"
                android:textSize="@dimen/tv_size_xsmall" />

            <Button
                android:id="@+id/btn_login"
                style="@style/btn_xlarge_style"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_gray_red_selector"
                android:minWidth="@dimen/btn_login_width"
                android:text="@string/login"
                android:textColor="@drawable/text_color_selector_white_gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >
    </LinearLayout>

</LinearLayout>